<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/moviesFragment">

    <fragment
        android:id="@+id/moviesFragment"
        android:name="com.example.cleanarchitectureandroid.presentation.popular_movies.PopularMoviesFragment"
        android:label="@string/title_popular_movies"
        tools:layout="@layout/movie_fragment">
        <action
            android:id="@+id/action_movieFragment_to_movieDetailsFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.example.cleanarchitectureandroid.presentation.movie_details.MovieDetailsFragment"
        android:label="@string/title_movie_details"
        tools:layout="@layout/movie_details_fragment" />

</navigation>